<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>

<?import javafx.scene.control.PasswordField?>
<?import com.sun.javafx.webkit.theme.RenderThemeImpl.FormTextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <!-- <Text text="Java FX Sample" GridPane.columnIndex="0" GridPane.rowIndex="0"/> -->
    <!-- <Label text="Hello world!" GridPane.columnIndex="0" GridPane.rowIndex="1"/> -->

    <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label text="Full Name: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label text="E-Mail: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label text="Phone Number: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label text="Date of Birth: " GridPane.columnIndex="0" GridPane.rowIndex="6" />

    <TextField id="usernameField" promptText="Enter a username" fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <PasswordField id="passwordField" promptText="Enter a password" fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField id="nameField" promptText="John Doe" fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <TextField id="emailField" promptText="john.doe@hotmail.com" fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField id="phoneField" promptText="###-###-####" fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <DatePicker id="dobPicker" promptText="mm/dd/yyyy" fx:id="dobPicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button id="enterBtn" fx:id="enterBtn" onAction="#btnOnPress" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="7" />
</GridPane>